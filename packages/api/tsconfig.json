{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [],
  "assets": {
    "baseDir": ".",
    "filePatterns": [
      "**/*.{json,yaml}",
      "!node_modules",
    ]
  }
}
