{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
  ],
  "exclude": [],
  "assets": {
    "baseDir": ".",
    "filePatterns": [
      "**/*.{json,yaml}",
      "!node_modules",
    ]
  }
}
